<?xml version="1.0" encoding="utf-8" ?>
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="Personal Finance Manager" class="bg-blue-600">
        <Label text="Finance Manager" class="text-white text-lg font-bold" />
    </ActionBar>
    
    <ScrollView>
        <StackLayout class="bg-gray-100">
            <!-- Net Worth Card -->
            <GridLayout rows="auto, auto" class="bg-white m-4 p-6 rounded-xl elevation-4">
                <Label text="Net Worth" class="text-gray-600 text-sm mb-1" row="0" />
                <Label text="{{ netWorthFormatted }}" class="text-2xl font-bold" row="1" />
            </GridLayout>

            <!-- Quick Actions -->
            <GridLayout columns="*, *" rows="auto, auto" class="mx-4 mb-4">
                <!-- Income & Expense Row -->
                <Button text="INCOME" tap="onNavigateToIncome" 
                        class="bg-green-500 text-white font-medium p-4 m-1 rounded-xl elevation-2" 
                        row="0" col="0" />
                <Button text="EXPENSE" tap="onNavigateToExpense" 
                        class="bg-red-500 text-white font-medium p-4 m-1 rounded-xl elevation-2" 
                        row="0" col="1" />
                
                <!-- Assets & Liabilities Row -->
                <Button text="ASSETS" tap="onNavigateToAssets" 
                        class="bg-blue-500 text-white font-medium p-4 m-1 rounded-xl elevation-2" 
                        row="1" col="0" />
                <Button text="LIABILITIES" tap="onNavigateToLiabilities" 
                        class="bg-purple-500 text-white font-medium p-4 m-1 rounded-xl elevation-2" 
                        row="1" col="1" />
            </GridLayout>

            <!-- Financial Summary Card -->
            <StackLayout class="bg-white m-4 p-6 rounded-xl elevation-4">
                <Label text="Financial Summary" class="text-xl font-bold mb-4" />
                
                <!-- Monthly Cashflow -->
                <GridLayout columns="*, auto" rows="auto" class="mb-4">
                    <Label text="Monthly Cashflow:" class="text-gray-600" row="0" col="0" />
                    <Label text="{{ cashflowFormatted }}" 
                           class="{{ cashflow >= 0 ? 'text-green-600' : 'text-red-600' }} text-right font-bold" 
                           row="0" col="1" />
                </GridLayout>

                <!-- Total Income -->
                <GridLayout columns="*, auto" rows="auto" class="mb-4">
                    <Label text="Total Income:" class="text-gray-600" row="0" col="0" />
                    <Label text="{{ totalIncomeFormatted }}" class="text-green-600 text-right font-bold" row="0" col="1" />
                </GridLayout>

                <!-- Total Expenses -->
                <GridLayout columns="*, auto" rows="auto" class="mb-4">
                    <Label text="Total Expenses:" class="text-gray-600" row="0" col="0" />
                    <Label text="{{ totalExpensesFormatted }}" class="text-red-600 text-right font-bold" row="0" col="1" />
                </GridLayout>

                <!-- Total Assets -->
                <GridLayout columns="*, auto" rows="auto" class="mb-4">
                    <Label text="Total Assets:" class="text-gray-600" row="0" col="0" />
                    <Label text="{{ totalAssetsFormatted }}" class="text-blue-600 text-right font-bold" row="0" col="1" />
                </GridLayout>

                <!-- Total Liabilities -->
                <GridLayout columns="*, auto" rows="auto" class="mb-4">
                    <Label text="Total Liabilities:" class="text-gray-600" row="0" col="0" />
                    <Label text="{{ totalLiabilitiesFormatted }}" class="text-purple-600 text-right font-bold" row="0" col="1" />
                </GridLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</Page>