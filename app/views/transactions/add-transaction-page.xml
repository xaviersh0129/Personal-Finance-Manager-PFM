<?xml version="1.0" encoding="utf-8" ?>
<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
    navigatingTo="navigatingTo"
    navigatingFrom="navigatingFrom">
    <ActionBar>
        <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="{{ goBack }}" />
    </ActionBar>
    
    <ScrollView>
        <StackLayout class="p-4">
            <TextField hint="Description" text="{{ description }}" class="mb-4 p-2 border rounded" />
            
            <TextField 
                hint="Amount" 
                text="{{ amount }}" 
                keyboardType="number" 
                class="mb-4 p-2 border rounded" />
            
            <Label text="Category" class="mb-2" />
            <ListPicker items="{{ categories }}" 
                       selectedIndex="{{ selectedCategoryIndex }}"
                       class="mb-4 p-2 border rounded" />
            
            <DatePicker date="{{ date }}" class="mb-4" />
            
            <Button text="Save" tap="{{ onSave }}" 
                    class="{{ 'p-4 text-white rounded-lg ' + (isIncome ? 'bg-green-500' : 'bg-red-500') }}" />
        </StackLayout>
    </ScrollView>
</Page>